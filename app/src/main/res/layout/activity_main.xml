<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/ghina_logo_image"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:src="@drawable/ghina" />

        <TextView
            android:id="@+id/gh_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ghina_logo_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Ghina Al Halabi's Photography"
            android:textAllCaps="true"
            android:textColor="#311B92"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paragraph"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gh_text_view"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/info_about_ghina"
            android:textAlignment="center"
            android:textColor="#6200EA"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/internet"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/gh_text_view"
            android:layout_below="@+id/paragraph"
            android:layout_marginTop="20dp"
            android:src="@drawable/internet" />

        <TextView
            android:id="@+id/site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paragraph"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/internet"
            android:paddingLeft="17dp"
            android:text="ghina7alabi.wixsite.com/portfolio"
            android:autoLink="web"
            android:textColor="#283593"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/email"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/gh_text_view"
            android:layout_below="@+id/internet"
            android:layout_marginTop="10dp"
            android:src="@drawable/envelope" />

        <TextView
            android:id="@+id/gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/site"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/email"
            android:paddingLeft="17dp"
            android:autoLink="email"
            android:text="ghina7alabi@gmail.com"
            android:textColor="#283593"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/gh_text_view"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:src="@drawable/photo_camera" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gmail"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/instagram"
            android:paddingLeft="17dp"
            android:text="ghina7alabi"
            android:textColor="#283593"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/placeholder"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/gh_text_view"
            android:layout_below="@+id/instagram"
            android:layout_marginTop="10dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/placeholder"
            android:paddingBottom="40dp"
            android:paddingLeft="17dp"
            android:text="Istanbul, Turkey"
            android:textColor="#283593"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingRight="7dp"
            android:text="Logo by Lana Al Halabi"
            android:textColor="#9E9E9E"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="3dp"
            android:text="Icons by Gregor Cresnar"
            android:textColor="#9E9E9E"
            android:textSize="8sp" />


    </RelativeLayout>

</ScrollView>